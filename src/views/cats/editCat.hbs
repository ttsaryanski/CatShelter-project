{{#if isUpload}}
    <form method="POST" class="cat-form" enctype="multipart/form-data">
{{else}}
    {{>editFormType}}
{{/if}}
    <h2>Edit Cat</h2>
    <label for="name">Name</label>
    <input name="name" type="text" id="name" value={{cat.name}}>
    <label for="description">Description</label>
    <textarea name="description" id="description">{{cat.description}}</textarea>
    {{#if isUpload}}
        <label for="image">Image</label>
        <input name="imageUrl" type="file" id="image">
        {{else}}
            {{>editFormInput}}
        {{/if}}
    <label for="group">Breed</label>
    <select name="breed" id="group">
        <option value={{cat.breed}}>{{cat.breed}}</option>
        {{#each breeds}}
            {{>breed}}
        {{/each}}
    </select>
    <button type="submit">Edit Cat</button>
</form>